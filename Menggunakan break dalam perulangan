package InfiniteLoop; 
public class InfiniteLoop {
    public static void main(String[] args) {
        int counter = 0;

        while (true) {
            System.out.println("Ini adalah iterasi ke-" + counter);
            counter++;

            if (counter == 3) {
                System.out.println("Menghentikan perulangan...");
                break;
            }
        }
    }
}
